<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--    FilterBottomSheetDialogFragment  -->

    <style name="TitleFilterBottomSheetDialogFragment">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/mark_pro_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blue</item>

    </style>

    <style name="SpinnerFilterBottomSheetDialogFragment">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">36dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/spinner_background</item>


    </style>



    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>