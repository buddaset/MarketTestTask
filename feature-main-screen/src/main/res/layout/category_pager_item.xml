<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/circleCategory"
        android:layout_width="71dp"
        android:layout_height="0dp"
        android:background="@drawable/circle"
        android:backgroundTint="@drawable/color_category_background"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iconCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:background="@drawable/ic_phones"
        android:backgroundTint="@drawable/color_category_icon"
        app:layout_constraintStart_toStartOf="@id/circleCategory"
        app:layout_constraintEnd_toEndOf="@id/circleCategory"
        app:layout_constraintTop_toTopOf="@id/circleCategory"
        app:layout_constraintBottom_toBottomOf="@id/circleCategory"
        />

    <TextView
        android:id="@+id/titleCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/circleCategory"
        app:layout_constraintStart_toStartOf="@id/circleCategory"
        android:textColor="@drawable/color_category_text"
        tools:text="@string/phones_category"
        android:fontFamily="@font/mark_pro_medium"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/circleCategory"/>


</androidx.constraintlayout.widget.ConstraintLayout>